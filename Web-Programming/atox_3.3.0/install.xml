<?xml version="1.0" encoding="utf-8" ?>
<template name="atox">
	<title>Atox</title>
	<summary>Dark template for Autos Package</summary>
	<author>Gleb Surinov</author>
	<contributor>Intelliants LLC</contributor>
	<version>3.3.0</version>
	<date>2015-08-07</date>
	<status>active</status>
	<compatibility>3.3</compatibility>

	<dependency type="package" exist="1">autos</dependency>

	<layout>
		<position menu="1" movable="0">inventory</position>
		<position menu="1" movable="0">mainmenu</position>
		<position menu="1" movable="0">copyright</position>

		<position movable="0">slider</position>
		<position>verytop</position>
		<position>top</position>
		<position>bottom</position>
		<position>verybottom</position>

		<section name="after-header">
			<position width="4">after_header_1</position>
			<position width="8">after_header_2</position>
		</section>
		<section name="content">
			<position fixed="1">left</position>
			<position width="6">center</position>
			<position fixed="1">right</position>
		</section>
		<section name="user-blocks">
			<position fixed="1">user1</position>
			<position fixed="1">user2</position>
		</section>
		<section name="footer">
			<position width="3">footer1</position>
			<position width="3">footer2</position>
			<position width="3">footer3</position>
			<position width="3">footer4</position>
		</section>
	</layout>

	<screenshots>
		<screenshot name="1.jpg"><![CDATA[Frontend -> Home Page]]></screenshot>
		<screenshot name="2.jpg"><![CDATA[Frontend -> Home Page]]></screenshot>
	</screenshots>

	<configgroup name="template_atox">Template</configgroup>
	
	<config group="template_atox" 
		    name="atox_divider1" 
		    type="divider" 
		    order="3000">Atox</config>

	<config group="template_atox" 
		    name="atox_website_name" 
		    type="text" 
		    description="Website name"
		    order="3001">Atox template</config>
	<config group="template_atox" 
		    name="atox_website_slogan" 
		    type="text" 
		    description="Website slogan"
		    order="3002">perfect place for selling cars</config>
	<config group="template_atox" 
		    name="max_top_menu_items" 
		    type="text" 
		    description="Max number of items in Main Menu"
		    order="3099">20</config>

	<config group="template_atox" 
		    name="atox_divider2" 
		    type="divider" 
		    order="3030">Social</config>

	<config group="template_atox"
			name="atox_social"
		    type="radio" 
		    order="3031"
		    values="1,0" 
		    description="Display social links">1</config>
	<config group="template_atox"
			name="atox_social_t"
		    type="text"
		    order="3032" 
		    show="atox_social|1"
		    description="Twitter Link">https://twitter.com/IntelliantsLLC</config>
	<config group="template_atox"
			name="atox_social_f"
		    type="text" 
		    order="3033" 
		    show="atox_social|1"
		    description="Facebook Link">https://www.facebook.com/Intelliants</config>
	<config group="template_atox"
			name="atox_social_g"
		    type="text" 
		    order="3034" 
		    show="atox_social|1"
		    description="Google+ Link">https://plus.google.com/102500660503219569194/posts</config>

	<phrases>
		<phrase category="frontend" key="submit_your_car">Submit your car</phrase>
	</phrases>

	<changeset>
		<block position="left" order="1">autos</block>
		<block position="left" order="2">autos_search</block>
		<block position="after_header_2" sticky="1">auto_featured</block>
		<block status="inactive">latest_blog_posts</block>
		<block position="bottom" classname="box-clear" header="0" order="77">auto_recent</block>
		<block position="left" order="99" classname="box-clear">common_statistics</block>
	</changeset>

